@model List<SocialPage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Social Pages Table</h4>
                    <p class="card-description">
                        <a asp-controller="socialpage" asp-action="Create"> <btn style="background-color:lawngreen;cursor:pointer;padding:10px"> Create </btn>  </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>

                                <tr>
                                    <th>Facebook</th>
                                    <th>LinkedIn</th>
                                    <th>Instagram</th>
                                    <th>Whatsapp</th>
                                    <th>TeacherId</th>
                                    <th>Settings</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <p>@item.Facebook</p>


                                        <td>
                                            <p>@item.LinkedIn </p>
                                        </td>

                                        <td>
                                            <p>@item.Instagram</p>
                                        </td>

                                        <td>
                                            <p>@item.Whatsapp</p>
                                        </td>


                                        <td>
                                            <p>@item.TeacherId</p>
                                        </td>

                                       

                                       <td>
                                    <a asp-action="delete" asp-route-id="@item.Id"> <btn style="background-color:red;cursor:pointer;padding:10px"> Delete </btn></a>
                                    <a asp-action="update" asp-route-id="@item.Id"> <btn style="background-color:chartreuse;cursor:pointer;padding:10px"> Update </btn></a>
                                    </td>

                                    </tr>
                                }
                                   
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
